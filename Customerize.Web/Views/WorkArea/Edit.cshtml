@model ProductDtoUpdate
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form asp-controller="Product" asp-action="Edit" method="post">
    <input asp-for="Id" type="hidden" />
    <label asp-for="Name"></label>
    <input asp-for="Name" value="@Model.Name" class="form-control" />

    <label asp-for="Stock"></label>
    <input asp-for="Stock" value="@Model.Stock" class="form-control" />

    <label asp-for="Price"></label>
    <input asp-for="Price" value="@Model.Price" class="form-control" />

    <label asp-for="CategoryId"></label>
    <select asp-for="CategoryId" value="@Model.CategoryId" asp-items="ViewBag.categories" class="form-control"></select>

    <label asp-for="ProductTypeId"></label>
    <select asp-for="ProductTypeId" value="@Model.ProductTypeId" asp-items="ViewBag.productTypes" class="form-control"></select>

    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn  btn-primary" />
    </div>
</form>